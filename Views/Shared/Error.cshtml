@using AcademiaFacil.Models.View;
@model ErrorModel
@{
    ViewData["Title"] = $"Error {Model.StatusCode}";
}
<div class="card mb-3 text-center">
    <img src="@Model.Imagem" class="card-img-top align-self-center" style="max-width: 45rem" alt="ErroImage">
    <div class="card-body">
        <h5 class="card-title">Status Code @Model.StatusCode</h5>
        <p class="card-text">@Model.Mensagem</p>
        <a class="btn btn-primary" asp-controller="@Model.ControladorDoErro" asp-action="@Model.AcaoErro">@Model.TextoBotaoControladorDoErrro</a>
        <a class="btn btn-dark" asp-controller="@Model.ControladorVoltar" asp-action="@Model.AcaoVoltar">Voltar</a>
    </div>
</div>